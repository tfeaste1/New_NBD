@model NBD.Models.ProductionPlan

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ProductionPlan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="ProjectID" class="control-label"></label>
                <select asp-for="ProjectID" class="form-control" asp-items="ViewBag.ProjectID"></select>
                <span asp-validation-for="ProjectID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamID" class="control-label"></label>
                <input asp-for="TeamID" class="form-control" />
                <span asp-validation-for="TeamID" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label class="control-label">Labour Requirements</label> <button type="button" id="btnRightlpp" class="btn btn-danger btn-sm">
                    <strong>-</strong>
                </button>
                @Html.ListBox("selOptslpp", (MultiSelectList)ViewBag.selOptsl, new { @size = 10, @class = "form-control" })
            </div>
            <div class="form-group col-md-6">
                <label class="control-label">Choose Labour Requirements</label> <button type="button" id="btnLeftlpp" class="btn btn-success btn-sm">
                    <strong>+</strong>
                </button>
                @Html.ListBox("availOptslpp", (MultiSelectList)ViewBag.availOptsl, new { @size = 10, @class = "form-control" })
            </div>
            <div class="form-group col-md-6">
                <label class="control-label">Material Requirements</label> <button type="button" id="btnRightmpp" class="btn btn-danger btn-sm">
                    <strong>-</strong>
                </button>
                @Html.ListBox("selOptsmpp", (MultiSelectList)ViewBag.selOptsm, new { @size = 10, @class = "form-control" })
            </div>
            <div class="form-group col-md-6">
                <label class="control-label">Choose Material Requirements</label> <button type="button" id="btnLeftmpp" class="btn btn-success btn-sm">
                    <strong>+</strong>
                </button>
                @Html.ListBox("availOptsmpp", (MultiSelectList)ViewBag.availOptsm, new { @size = 10, @class = "form-control" })
            </div>

            <div class="form-group">
                <input id="btnSubmitpp" type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

        <script src="~/js/multiselect.js"></script>}
}
