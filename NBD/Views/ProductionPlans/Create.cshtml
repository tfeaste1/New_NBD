@model NBD.Models.ProductionPlan

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ProductionPlan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectID" class="control-label"></label>
                <select asp-for="ProjectID" class="form-control" asp-items="ViewBag.ProjectID"></select>
            </div>
            <div class="form-group">
                <label asp-for="TeamID" class="control-label"></label>
                <input asp-for="TeamID" class="form-control" />
                <span asp-validation-for="TeamID" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label class="control-label">Labour Requirements</label> <button type="button" id="btnProdLaborRight" class="btn btn-danger btn-sm">
                    <strong>-</strong>
                </button>
                @Html.ListBox("selectedProdLabors", (MultiSelectList)ViewBag.selProdLabors, new { @size = 10, @class = "form-control" })
            </div>
            <div class="form-group col-md-6">
                <label class="control-label">Choose Labour Requirements</label> <button type="button" id="btnProdLaborLeft" class="btn btn-light btn-sm">
                    <strong>+</strong>
                </button>
                @Html.ListBox("availableProdLabors", (MultiSelectList)ViewBag.availProdLabors, new { @size = 10, @class = "form-control" })
            </div>
            <div class="form-group col-md-6">
                <label class="control-label">Material Requirements</label> <button type="button" id="btnProdMaterialRight" class="btn btn-danger btn-sm">
                    <strong>-</strong>
                </button>
                @Html.ListBox("selectedProdMaterials", (MultiSelectList)ViewBag.selProdMaterials, new { @size = 10, @class = "form-control" })
            </div>
            <div class="form-group col-md-6">
                <label class="control-label">Choose Material Requirements</label> <button type="button" id="btnProdMaterialLeft" class="btn btn-light btn-sm">
                    <strong>+</strong>
                </button>
                @Html.ListBox("availableProdLabors", (MultiSelectList)ViewBag.availProdMaterials, new { @size = 10, @class = "form-control" })
            </div>

            <div class="form-group">
                <input id="btnProductionPlanSubmit" type="submit" value="Save" class="btn btn-light" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn-danger" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script src="~/js/multiselect.js"></script>
}
