@model IEnumerable<NBD.Models.DesignReport>

@{
    ViewData["Title"] = "Index";
}

<h1>Design Reports</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Project Name:
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stage):
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hour):
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date):
            </th>
            <th>
                Approved By:
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Task):
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stage.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FullName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Task.Description)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                @if (User.IsInRole("Admin, Manager"))
                {
                    @:|
                    <a class="btn btn-light card-link" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    <a class="btn btn-danger card-link" asp-action="Delete" asp-route-id="@item.ID">Delete</a>

                }
            </td>
        </tr>
}
    </tbody>
</table>
