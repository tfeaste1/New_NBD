@model NBD.Models.Project

@{
    ViewData["Title"] = "Project Details";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div>
        <h4>Project</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StartDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EndDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EndDate)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Amount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Amount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProdBidSite)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProdBidSite)
            </dd>

        </dl>
      <h4>Project Bid Details:</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EstStartDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EstStartDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EstEndDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EstEndDate)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BidAmount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BidAmount)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ClientApproval)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ClientApproval)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AdminApproval)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AdminApproval)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Client)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Client.CompanyName)
                </dd>
            </dl>
            
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ProjectInventories)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProjectInventories)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Inventory.Name)



                            </td>

                        </tr>
                    }
                </tbody>

            </table>
</div>
<div>
    <a class="btn btn-light" asp-action="Edit" asp-route-id="@Model.ID">Edit</a> 
    <a class="btn btn-danger"asp-action="Index">Back to List</a>
</div>
</body>
</html>
