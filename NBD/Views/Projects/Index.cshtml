@model IEnumerable<NBD.Models.Project>

@{
   ViewData["Title"] = "Projects";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
   <h1 class="display-4">Projects</h1>
<p>
    <a class="btn btn-light" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
          
                     
            <th>
                @Html.DisplayNameFor(model => model.Client.CompanyName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
           
            <td>

                @Html.DisplayFor(modelItem => item.Client.CompanyName)

            </td>

            <td>
                <a class="btn btn-light" asp-action="Edit" asp-route-id="@item.ID">Edit</a> 
                <a class="btn btn-light" asp-action="Details" asp-route-id="@item.ID">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
<div><a class="btn btn-danger" asp-controller="Home" asp-action="Index">Back to Home Page</a> </div>
</body>
</html>
