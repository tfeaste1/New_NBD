@model NBD.Models.Client

@{
    ViewData["Title"] = "Client Details";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div>
        <h2>Client</h2>
        <hr />
        <dl class="row row-cols-4">

            <dt class="col">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col">
                @Html.DisplayNameFor(model => model.CompanyName)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.CompanyName)
            </dd>

            <dt class="col">
                @Html.DisplayNameFor(model => model.Province)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.Province)
            </dd>
            <dt class="col">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col">
                @Html.DisplayNameFor(model => model.PostalCode)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.PostalCode)
            </dd>

        </dl>
    </div>
    <div>
        <a asp-area="" asp-controller="Projects" asp-action="Create" asp-route-id="@Model.ID" class="btn btn-light">Create Project</a>
        <a class="btn btn-light" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
        <a class="btn btn-danger" asp-action="Index">Back to List</a>
    </div> 
   
</body>
</html>
